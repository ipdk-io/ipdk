[ "$DEBUG" == 'true' ] && \
    set -x && \
    export GRPC_VERBOSITY=debug && \
    export HOST_TARGET_LOGLEVEL="DEBUG"

echo "Running host target server for ${IP_ADDR}:${PORT}"
/host_target_main.py --ip "${IP_ADDR}" --port "${PORT}"
